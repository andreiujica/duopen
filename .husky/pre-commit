#!/usr/bin/env sh
. "$(dirname "$0")/_/husky.sh"

echo "\nğŸ” Running Server fixes..."
cd "$(dirname "$0")/../server"

echo "\nğŸ” Running Prettier..."
npm run prettier:fix

echo "\nğŸ” Running ESLint..."
npm run lint:fix

echo "\nğŸ” Running Client Fixes..."

cd "../client"

echo "\nğŸ” Running Prettier..."
npm run lintfix

exit 0

